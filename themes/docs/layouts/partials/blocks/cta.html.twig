        {#- cta ~#}
        <div id="{{ block.name }}" class="px-4 py-6 md:px-8 lg:px-14 xl:px-24">
          <div class="max-w-screen-xl mx-auto">
            <div class="flex flex-col md:flex-row gap-4 md:gap-6 items-center justify-center text-center lg:justify-start lg:text-left">
              {%- if block.button is defined ~%}
                {%- set button = {url: block.button.url|default('/'), title: block.button.title|default('Get started'|trans)} ~%}
              {%- else ~%}
                {%- set button_page = site.pages.showable|filter(p => p.section == 'docs' and p.type == 'page')|sort_by_weight|first ~%}
                {%- set button = {url: button_page, title: button_page.title} ~%}
              {%- endif ~%}
              <a href="{{ url(button.url) }}" class="text-white dark:text-white hover:text-white hover:dark:text-white hover:no-underline">
                <div class="px-6 py-2.5 rounded-full bg-primary-700 font-bold text-base transition-colors duration-300 ease-in-out hover:bg-primary-900">
                  {{ button.title }}
                </div>
              </a>
              <ol class="flex flex-col md:flex-row gap-4 md:gap-6 items-center">
              {%- for link in block.links|default([]) ~%}
                <li>
                  <a href="{{ url(link.url|default('/')) }}" class="flex items-center space-x-2 font-bold text-base align-middle hover:no-underline transition-colors duration-300 ease-in-out">
                    <span>{{ link.title|default('Link #' ~ loop.index)|trans }}</span>
                    {%- if link.url starts with 'http' ~%}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" /></svg>
                    {%- else ~%}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" /></svg>
                    {%- endif ~%}
                  </a>
                </li>
              {%- endfor ~%}
              </ol>
            </div>
          </div>
        </div>